@page "{id}"
@model UserCommunity.UI.Pages.User.EditModel
@{
}
<div class="container-fluid">
    <form method="post">
        <div class="card">
            <div class="card-header">
                <span class="text-center">Edit your information</span>
            </div>
            <div class="card-body">
                <div class="input-group">
                    <span class="input-group-text">Name</span>
                    <input type="hidden" asp-for="CurrentUser.ID" value="@Model.CurrentUser.ID" />
                    <input asp-for="CurrentUser.FirstName" type="text" aria-label="First name" class="form-control" required>
                    <span asp-validation-for="CurrentUser.FirstName" class="text-danger"></span>
                    <input asp-for="CurrentUser.SurName" type="text" aria-label="Last name" class="form-control" required>
                    <span asp-validation-for="CurrentUser.SurName" class="text-danger"></span>

                </div>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Department</span>
                    <input asp-for="CurrentUser.Department" type="text" aria-label="Department" class="form-control" required>
                    <span asp-validation-for="CurrentUser.Department" class="text-danger"></span>
                </div>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Position</span>
                    <input asp-for="CurrentUser.Position" type="text" aria-label="Position" class="form-control" required>
                    <span asp-validation-for="CurrentUser.Position" class="text-danger"></span>

                </div>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Working hours</span>
                    <input asp-for="CurrentUser.TimeAtWork" type="text" aria-label="Working hours" class="form-control">
                </div>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Secret</span>
                    <input asp-for="CurrentUser.DarkSecret" type="text" aria-label="Secret" class="form-control">
                </div>
                <div class="input-group flex-nowrap">
                    <span class="input-group-text" id="addon-wrapping">Email</span>
                    <input asp-for="CurrentUser.Email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="addon-wrapping" required>
                    <span asp-validation-for="CurrentUser.Email" class="text-danger"></span>
                </div>
                <br>
                <button asp-page-handler="Edit" class="btn btn-primary">Save</button>
                <button asp-page-handler="Delete" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </form>
</div>